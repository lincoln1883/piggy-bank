<h1 class="text-center">Add a New Category</h1>

<%= form_with(model:[@category], url: categories_path) do |f| %>
  <!-- Name field -->
  <div class="flex flex-col justify-center items-center">
    <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    </div>

    <!-- Icon field -->
    <div class="form-group">
    <%= f.label :icon %><br>
    <%= f.text_field :icon %>
    </div>

    <div class="form-group">
      <%= f.submit "Save" %>
    </div>
  </div>
<% end %>

<%= link_to "Back", categories_path %>
