<nav class="bg-white border-gray-200" style="background-color: #3778c2">
  <div class="max-w-screen-xl flex items-center justify-between mx-auto p-4">
    <%= link_to categories_path do %>
      <i class="fa-solid fa-arrow-left-long fa-lg" style="color: white"></i>
    <% end %>
    <div class="">
      <h2 class="font-semibold text-center text-white uppercase">new categories</h2>
    </div>
    <div class="md:block md:w-auto">
      <ul class="font-medium float-right">
        <li>
          <i class="fa-solid fa-magnifying-glass fa-lg" style="color: white"></i>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-start sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto">
        <div class="divide-y divide-gray-200">
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
            <%= form_with(model:[@category], url: categories_path) do |f| %>
              <% if @category.errors.any? %>
                <div class="alert alert-danger">
                  <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
                  <ul>
                    <% @category.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <!-- Name field -->
              <div class="relative">
                <%= f.label :name, class: 'absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base
                    peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5
                    peer-focus:text-gray-600 peer-focus:text-sm' %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "email",placeholder: 'Email', class: "peer placeholder-transparent
                      h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" %>
              </div>

              <!-- Icon field -->
              <div class="relative">
                <%= f.label :icon, class: "mt-4 absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440
                         peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm" %><br>
                <%= f.text_field :icon,class: 'peer placeholder-transparent h-10 w-full border-b-2 border-gray-300
                         text-gray-900 focus:outline-none focus:borer-rose-600' %>
              </div>
              <div class="mt-9 flex justify-center items-center w-full h-10 border-2 border-slate-200 rounded-md" style="background-color: #5fb523">
                <%= f.submit 'Save',class: 'w-40 text-white font-semibold'%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>